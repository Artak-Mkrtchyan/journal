<div class="container">
    <div class="row">
        <form action="/articles/{{article.id}}" method="post" class="w-100 m-5">
            <div class="form-group">
                <label class="mx-2" for="title">Title</label>
                <input type="text" class="form-control" name="title" value="{{article.title}}" required>
            </div>
            <div class="form-group">
                <label class="mx-2" for="description">Description</label>
                <textarea class="form-control" name="description" required>{{article.description}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>