{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="row">
    <form class="article-edit-form" action="/articles/{{id}}" method="post">
        <div class="form-group">
            <input type="text" class="title-input" name="title" value="{{title}}">
            <label class="title-label" for="title">Title</label>
        </div>
        <div class="form-group">
            <textarea class="title-textarea" rows="10" name="description">{{description}}</textarea>
            <label class="title-label" for="description">Description</label>
        </div>
        <button type="submit" class="btn btn-info">Save</button>
    </form>
</div>