{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="row">
    <form action="/articles" method="post" class="article-edit-form">
        <div class="form-group">
            <input class="title-input" type="text" class="form-control" name="title" value="{{title}}" >
            <label class="title-label" for="title">Title</label>
        </div>
        <div class="form-group">
            <textarea class="title-textarea" rows="10" name="description" >{{description}}</textarea>
            <label class="title-label" for="description">Description</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>